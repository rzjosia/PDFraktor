{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur PDFraktor{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-12">
                    <h1 class="display-5">Séparer votre document en plusieurs PDFs</h1>
                    <p class="lead">Extraire plusieurs pages à partir d'un PDF</p>
                    <hr class="my-2">
                    {#                    <p><a href="#" class="text-light">Plus d'informations</a></p>#}
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="lead">
                        {{ form_start(form) }}
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        {{ include("home/_howto.html.twig") }}
    </div>

{% endblock %}

{% block javascripts %}
    <script>
		$(document).ready(function () {
			$(document).on('change', '.custom-file-input', function () {
				let fileName = $(this).val().replace(/\\/g, '/').replace(/.*\//, '');
				$(this).parent('.custom-file').find('.custom-file-label').text(fileName);
				$(this).parent().append("<p>Téléchargement en cours, veuillez patienter...</p>");
				$(this).closest("form").trigger("submit");
			});
		});
    </script>
{% endblock %}