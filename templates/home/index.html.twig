{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur PDFraktor{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-12">
                    <h1 class="display-5">Séparer votre document en plusieurs PDF</h1>
                    <p class="lead">Extraire plusieurs pages à partir d'un PDF</p>
                    <hr class="my-2">
                    {#                    <p><a href="#" class="text-light">Plus d'informations</a></p>#}
                </div>
                <div class="row col-12 justify-content-between">
                    <div class="col-lg-4 col-md-6 col-xs-12" id="upload">
                        <div class="card">
                            <div class="card-body align-content-around">
                                {{ form_start(form, {
                                    "action": path("files.create"),
                                    "attr": {"id": "uploadForm"}}) }}
                                {{ form_row(form.document, {"attr": {"multiple": true}}) }}
                                {{ form_rest(form) }}

                                <div>
                                    <p id="filesNumber">0</p>
                                    <p>fichiers selectionnés</p>
                                </div>

                                <button type="submit" class="btn btn-primary btn-block" id="splitButton">Découper
                                </button>

                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <div class="card border-info">
                            <div class="card-header">
                                <h4>Mes fichiers</h4>
                            </div>
                            <div class="card-body">
                                <ul id="pdfList" class="list-group">
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        {{ include("home/_howto.html.twig") }}
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('split') }}
{% endblock %}